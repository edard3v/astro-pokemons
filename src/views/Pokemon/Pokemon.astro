---
import { Icon } from "astro-icon/components";
import css from "./Pokemon.module.css";
import Layout from "@layouts/Layout/Layout.astro";

interface Props {
  pokemon_name: string;
  audio: string;
  img: string;
}

const { pokemon_name, audio, img } = Astro.props;
---

<Layout
  title={pokemon_name}
  description={`Mostrando informaciÃ³n sobre el pokemon ${pokemon_name}`}
  img={img}
  keywords={[pokemon_name]}
>
  <main class={css.pokemon}>
    <div class={css.wrapper_1}>
      <h1 class={css.name}>{pokemon_name}</h1>
      <Icon class={css.heart} name={"heart_empty"} size={50} />
    </div>
    <picture>
      <img transition:name={`pokemon_${pokemon_name}`} src={img} alt={pokemon_name} />
    </picture>
    <audio controls>
      <source src={audio} type="audio/ogg" />
      Tu navegador no soporta el elemento de audio.
    </audio>
  </main>
</Layout>
