---
import css from "./Card.module.css";

interface Props {
  title: string;
  img: string;
}

const { title, img } = Astro.props;
---

<article class={css.card}>
  <h6 class={css.title}>{title}</h6>
  <a href={`/${title}/`}>
    <img transition:name={`pokemon_${title}`} src={img} alt={title} />
  </a>
</article>
