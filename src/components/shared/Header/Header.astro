---
import Link from "@components/links/Link/Link.astro";
import { ROUTER } from "src/pages/router";

const { pokemons, favoritos } = ROUTER;
---

<header>
  <nav>
    <Link is_paged href={pokemons.href}>{pokemons.display}</Link>
    <Link href={favoritos.href}>{favoritos.display}</Link>
  </nav>
</header>

<style>
  header {
    border-bottom: var(--border);
    min-height: 80px;

    display: grid;
    align-items: center;

    nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--xl);

      @media (min-width: 320px) and (max-width: 767px) {
        gap: var(--lg);
      }

      a {
        color: inherit;
        text-transform: capitalize;

        &:hover {
          color: var(--primary);
        }
      }
    }
  }
</style>
